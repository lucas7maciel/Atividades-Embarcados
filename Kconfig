source "Kconfig.zephyr"

menu "Estufa Inteligente"

config TEMP_VALID_MIN_C
	int "Temperatura mínima válida (°C)"
	range -40 125
	default 18

config TEMP_VALID_MAX_C
	int "Temperatura máxima válida (°C)"
	range -40 125
	default 30

config HUM_VALID_MIN_PCT
	int "Umidade mínima válida (%)"
	range 0 100
	default 40

config HUM_VALID_MAX_PCT
	int "Umidade máxima válida (%)"
	range 0 100
	default 70

config TEMP_PRODUCER_INTERVAL_MS
	int "Intervalo de geração de temperatura (ms)"
	range 100 10000
	default 1000

config HUM_PRODUCER_INTERVAL_MS
	int "Intervalo de geração de umidade (ms)"
	range 100 10000
	default 1500

config FILTER_QUEUE_DEPTH
	int "Capacidade das filas de mensagens"
	range 2 32
	default 8

endmenu
