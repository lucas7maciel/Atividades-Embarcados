source "Kconfig.zephyr"

menu "Sincronizacao SNTP"

config SNTP_SERVER_HOSTNAME
	string "Hostname ou IP do servidor SNTP"
	default "192.0.2.2"
	help
	  Endereco do servidor SNTP utilizado para sincronizar o relogio.
	  Utilizar um IP direto evita dependencia de DNS em ambientes sem rede.

config SNTP_SERVER_PORT
	int "Porta do servidor SNTP"
	range 1 65535
	default 123

config SNTP_UPDATE_INTERVAL_SEC
	int "Intervalo entre sincronizacoes (s)"
	range 5 3600
	default 60

config TIME_CHANNEL_QUEUE_LEN
	int "Profundidade da fila do canal de tempo"
	range 1 16
	default 4

endmenu
